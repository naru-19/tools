{
  "title": "my rule",
  "rules": [
    {
      "description": "Ctrl + j = backspace",
      "manipulators": [
         {
            "type": "basic",
            "from": {
                "key_code": "j",
                "modifiers": {
                    "mandatory": ["control"],
                    "optional": ["caps_lock", "option"]
                }
            },
            "to": [
                {
                    "key_code": "delete_or_backspace"
                }
            ]
         }
      ]
    }
  ]
}
